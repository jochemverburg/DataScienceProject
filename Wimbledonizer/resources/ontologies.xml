<owl:ObjectProperty rdf:ID="def">
	<!-- Defines that a person can only be defeated once -->
	<rdf:type rdf:resource="&owl;InverseFunctionalProperty" />
	<owl:disjointWith rdf:resource="#defBy"/>
</owl:ObjectProperty>

<owl:ObjectProperty rdf:ID="defBy">
	<owl:inverseOf rdf:resource="#def"/>
</owl:ObjectProperty>

